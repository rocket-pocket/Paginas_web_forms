html(lang=idioma)
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title=titulo
    body
        h1 Pug avanzado.

        //- Lógica mediante JavaScript
        //- -let nombre = "Pepe"
        - let nombre = 'María'
        -if (nombre === 'Pepe'){
            p hola otra vez, Pepe
        -}else{
            p Hola #{nombre}, ¿donde está Pepe?
        -}

        //-Lógica nativa (build-in) pug
        - nombre = 'Javier'
        if (nombre === 'Pepe')
            p hola otra vez, Pepe
        else
            p Hola #{nombre}, ¿donde está Pepe?

        //-Switch
        - nombre = "Alicia"
        case nombre
            when "Pepe"
                p hola otra vez, Pepe
            when "Alicia"
                p Hola #{nombre}, ¿donde está Pepe?
            default
                p hola #{nombre}!

        
        //-Iteracionnes -> Each
        - let aSecciones = ['Inicio', 'Porfolio', 'Clientess', 'About'] 
            nav 
                ul 
                    each seccion in aSecciones 
                        li: a(href="#"+seccion.toLowerCase())= seccion 

        -let aOpciones = ['c#', 'JAVA', 'JavaScript']
        -let opcionesName = 'cursos'
            label(for=opcionesName) Selecciona un curso
                select(name= opcionesName id=opcionesName)
                    each val in aOpciones
                        option(value=val)=val
                button enviar
                            
        